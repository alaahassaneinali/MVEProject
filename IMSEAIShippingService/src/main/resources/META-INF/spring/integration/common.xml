<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:integration="http://www.springframework.org/schema/integration"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context.xsd
			http://www.springframework.org/schema/integration
			http://www.springframework.org/schema/integration/spring-integration.xsd">


	<context:annotation-config />

	<context:component-scan base-package="edu.mum" />

	<bean id="connectionFactory"
		class="org.springframework.jms.connection.CachingConnectionFactory">
		<property name="targetConnectionFactory">
			<bean class="org.apache.activemq.ActiveMQConnectionFactory">
				<!-- vm: local[embedded] no network traffic OR tcp: -->
				<!-- <property name="brokerURL" value="vm://localhost:61616" />-->
				<property name="brokerURL" value="tcp://localhost:61616" />
			</bean>
		</property>
		<property name="sessionCacheSize" value="10" />
	</bean>

	<bean id="auctionCenter.HighPriceItemQueue"
		class="org.apache.activemq.command.ActiveMQQueue">
		<constructor-arg value="highPriceItemQueue" />
	</bean>
	<bean id="auctionCenter.ModeratePriceItemQueue"
		class="org.apache.activemq.command.ActiveMQQueue">
		<constructor-arg value="moderatePriceItemQueue" />
	</bean>


</beans>
